<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">

    <persistence-unit name="jpa-hibernate" transaction-type="RESOURCE_LOCAL">
        <!-- Especificar o provedor JPA (Hibernate) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Configuração da conexão com o banco de dados -->
        <properties>
            <!-- URL do banco de dados -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/projeto_np2"/>

            <!-- Driver do banco de dados -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Usuário e senha -->
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Gustavo30252015"/>

            <!-- Dialeto do Hibernate para o banco de dados -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Configurações de geração de esquema de banco de dados -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- Mostrar consultas SQL no console -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>

</persistence>